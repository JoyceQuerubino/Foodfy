        
{% extends "layout.njk" %}

{% block content %}

        <div id="retangulo">
            <div class="conteudo-retangulo">
                <p class="titulo-retangulo">
                    <strong>As melhores receitas</strong>
                </p>
                <p class="texto-retangulo">Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
            </div>
                <img src="/assets/chef.png" alt="vetor de cozinheiro">
        </div>

            <h1>Mais acessadas</h1>

        <section class="cards-receitas">
           
            {% for item in items %}

            <div class="card">
                <div class="imagem-card">
                    <img src="{{ item.image }}" alt="imagem de {{ item.title }}">
                </div>

                <div class="conteudo-card">
                        <div class="titulo-card">
                            <p>{{ item.title }}</p>
                        </div>
                        <div class="autor-card">
                            <p>{{ item.author }}</p>
                        </div>
                </div>
            </div>

            {%endfor%}

        </section>

{% endblock %}